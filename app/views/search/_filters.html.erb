<%= form_for :search, url: search_index_path, method: :get do |f| %>
  <%= f.hidden_field :category_id, value: @category.id %>
    <%= f.fields_for :filters do |ff| %>
      <% @category.search_filters.each do |filter| %>
        <%= render "/search/category_filters/#{Forms::SearchFormBuilder.partial_view_name(filter)}", ff: ff, filter: filter %>
        <br/>
      <% end  %>
    <% end %>
  <%= f.submit 'Search' %>
<% end %>