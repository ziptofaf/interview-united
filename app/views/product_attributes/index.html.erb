<p id="notice"><%= notice %></p>

<h1>Product attribute</h1>

<table class="table table-bordered">
  <thead>
  <tr>
    <th>Product name</th>
    <th>Category Filter</th>
    <th colspan="1"></th>
  </tr>
  </thead>

  <tbody>
  <% @product_attributes.each do |attribute| %>
    <tr>
      <td><%= attribute.product.name %></td>
      <td><%= link_to "#{attribute.category_filter.name}", category_filter_path(attribute.category_filter) %></td>
      <td><%= link_to 'Edit', edit_product_product_attribute_path(@product, attribute) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
